<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
    <!-- FORM VIEWS -->
    <record id="universitas_registrasi_cancel_reason_view_form" model="ir.ui.view">
        <field name="name">universitas.registrasi_cancel_reason form</field>
        <field name="model">universitas.registrasi_cancel_reason</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form>
                <group name="group_1" colspan="4" col="2" string="Cancel Reason">
                    <field name="cancel_reason" colspan="2" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    Or
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="universitas_registrasi_cancel_reason_action" model="ir.actions.act_window">
        <field name="name">Registrasi Cancel Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">universitas.registrasi_cancel_reason</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


	</data>
</openerp>
